<body style="overflow-x: hidden;">
  <div class="container">
    <div class="row">
      <div class="cd">
        <%= image_tag "canad" %>
      </div>
      <h1 class="oq">Canada Immigration & Visa</h1>
      <div class="wq">
       <h2 style="font: italic bold 50px Georgia, serif;">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="btn btn-light", style="width: 120px;">
            <%= f.button :submit, "Log in", class: "am" %>
          </div>
      </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</body>
